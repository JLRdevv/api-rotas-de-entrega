{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "projects": {
    "common": {
        "type": "library",
        "root": "libs/common",
        "entryFile": "index",
        "sourceRoot": "libs/common/src",
        "compilerOptions": {
            "tsConfigPath": "libs/common/tsconfig.lib.json"
        }
    },
    "gateway": {
        "type": "application",
        "root": "apps/gateway",
        "entryFile": "main",
        "sourceRoot": "apps/gateway/src",
        "compilerOptions": {
            "tsConfigPath": "apps/gateway/tsconfig.app.json"
        }
    },
    "points": {
        "type": "application",
        "root": "apps/points",
        "entryFile": "main",
        "sourceRoot": "apps/points/src",
        "compilerOptions": {
            "tsConfigPath": "apps/points/tsconfig.app.json"
        }
    },
    "route-optimization": {
        "type": "application",
        "root": "apps/route-optimization",
        "entryFile": "main",
        "sourceRoot": "apps/route-optimization/src",
        "compilerOptions": {
            "tsConfigPath": "apps/route-optimization/tsconfig.app.json"
        }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "utils": {
        "type": "library",
        "root": "libs/utils",
        "entryFile": "index",
        "sourceRoot": "libs/utils/src",
        "compilerOptions": {
            "tsConfigPath": "libs/utils/tsconfig.lib.json"
        }
    }
  },
  "monorepo": true,
  "root": "apps/gateway"
}